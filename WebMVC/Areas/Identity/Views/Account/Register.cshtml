@using WebMVC.Areas.Identity.ViewMedels
@model RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký";
}

<div class="login-box">
    <form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="bg-white p-4"
          data-role="validator"
          data-clear-invalid="2000"
          data-on-error-form="invalidForm">
        <img src="~/images/logo.png" class="place-right mt-4 mr-5">
        <h1 class="mb-0">@ViewData["Title"]</h1>
        <div class="text-muted mb-4">Đăng ký thành viên mới</div>
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <input asp-for="FullName" data-role="input" placeholder="Tên đầy đủ" data-append="<span class='mif-user'></span>">
            <span class="invalid_feedback" asp-validation-for="FullName"></span>
        </div>
        <div class="form-group">
            <input asp-for="Email" data-role="input" placeholder="Thư điện tử" data-append="<span class='mif-envelop'></span>" data-validate="required">
            <span class="invalid_feedback">Phải nhập email</span>
        </div>
        <div class="form-group">
            <input type="password" data-role="input" asp-for="Password" placeholder="Mật khẩu" data-append="<span class='mif-key'></span>" data-validate="required">
            <span class="invalid_feedback">Mật khẩu phải có ký tự đặt biệt</span>
            <input type="password" data-role="input" asp-for="ConfirmPassword" class="mt-4" placeholder="Nhập lại mật khẩu" data-append="<span class='mif-checkmark'>" data-validate="required equals=password">
            <span class="invalid_feedback" asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="form-group d-flex flex-align-center flex-justify-between">
            <input type="checkbox" data-role="switch" data-material="true" data-validate="required" data-caption="Chấp nhận thỏa thuận sử dụng dịch vụ <a href='#'>terms</a>">
            <button type="submit" class="button primary">Đăng ký ngay</button>
        </div>
        <div class="text-center m-4 mt-10">- HOẶC -</div>
        <div class="form-group border-top bd-default pt-2">
            <a asp-action="Login" asp-controller="Account">Tôi đã đăng ký</a>
        </div>
    </form>
</div>
